<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

<ImageView
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:src="@drawable/eat"
    android:layout_marginTop="50dp"
    android:layout_marginLeft="120dp"
    android:id="@+id/slide_image"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/slide_heading"
        android:text="Welcome visit here"
        android:layout_below="@id/slide_image"
        android:layout_marginLeft="100dp"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_centerInParent="true"
        />
    <TextView
        android:layout_width="match_parent"
        android:textColor="@color/colorWhite"
        android:layout_height="wrap_content"
        android:id="@+id/slide_desc"
        android:text="this is my project"
        android:layout_below="@id/slide_heading"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:layout_centerInParent="true"
        android:textSize="20sp"
        android:lineSpacingExtra="4dp"
        android:gravity="center_horizontal"
        />

</RelativeLayout>