<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirebaseAccount.Main2Activity"
    android:id="@+id/activity_main2"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    >

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/activity_login"
        android:id="@+id/icon"
        />

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/icon"
        android:id="@+id/login_email"
        android:hint="enter email"
        android:focusable="true"
        android:maxLines="1"
        />



    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/login_password"
        android:hint="enter password"
        android:focusable="true"
        android:maxLines="1"
        android:layout_below="@+id/login_email"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_password"
        android:id="@+id/login_btn_login"
        android:text="Login"
        android:background="#B7E081"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login_btn_forgot_password"
        android:layout_below="@id/login_btn_login"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:text="Reset your password ?"
        style="@style/Widget.AppCompat.Button.Borderless"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/login_layout_or"
        android:layout_below="@+id/login_btn_forgot_password"
        android:gravity="center"
        android:orientation="horizontal"
        >

    <View
        android:layout_width="200dp"
        android:layout_height="1dp"
        android:background="#c4c8c9"
        android:layout_margin="5dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="OR"
        />
    <View
        android:layout_width="200dp"
        android:layout_height="1dp"
        android:background="#c4c8c9"
        android:layout_margin="5dp"
        />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login_btn_signup"
        android:layout_below="@id/login_layout_or"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:text="Sign Up "
        style="@style/Widget.AppCompat.Button.Borderless"
        />

</RelativeLayout>